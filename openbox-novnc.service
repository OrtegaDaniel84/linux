[Unit]
Description=Openbox + Polybar + noVNC
After=network.target

[Service]
User=daniel
Environment=DISPLAY=:99
WorkingDirectory=/home/daniel
ExecStart=/bin/bash -c '/usr/bin/Xvfb :99 -screen 0 1920x957x24 -nolisten tcp -dpi 96 & sleep 1; DISPLAY=:99 openbox-session & sleep 1; /usr/bin/x11vnc -nopw -forever -shared -display :99 -rfbport 5900 -localhost & /usr/bin/websockify --web=/usr/share/novnc/ 3000 localhost:5900'
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
